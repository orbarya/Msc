\begin_body

\begin_layout Enumerate
\begin_inset ERT
status open

\begin_layout Plain Layout

{}
\end_layout

\end_inset

Suppose 
\begin_inset Formula $A\in\mathbb{R}^{mxn}$
\end_inset

 represents a transformation from vector space 
\begin_inset Formula $V\subseteq\mathbb{R}^{n}\,to\,W\subseteq\mathbb{R}^{m}$
\end_inset

.
\end_layout

\begin_deeper
\begin_layout Enumerate
\begin_inset Formula $im(A)=\left\{ w\in W:w=Ax,x\in V\right\} ,im(A)\subseteq\mathbb{R}^{m}$
\end_inset

.
 Let's show that im(A) is a subspace of 
\begin_inset Formula $\mathbb{R}^{m}$
\end_inset

:
\end_layout

\begin_deeper
\begin_layout Enumerate
\begin_inset Formula $A\vec{0}=\vec{0}\Rightarrow im(A)\neq\emptyset$
\end_inset


\end_layout

\begin_layout Enumerate
Let 
\begin_inset Formula $w_{1},w_{2}\in im(A),\lambda_{1},\lambda_{2}\in\mathbb{R}$
\end_inset

 
\begin_inset Newline newline
\end_inset


\begin_inset Formula $\exists v_{1},v_{2}\in V\,\,s.t\,\,Av_{1}=w_{1},Av_{2}=w_{2}$
\end_inset

 
\begin_inset Formula 
\[
\lambda_{1}w_{1}+\lambda_{2}w_{2}=\lambda_{1}Av_{1}+\lambda_{2}Av_{2}=A(\lambda_{1}v_{1}+\lambda_{2}v_{2})
\]

\end_inset

and since 
\begin_inset Formula $\lambda_{1}v_{1}+\lambda_{2}v_{2}\in V$
\end_inset

 and 
\begin_inset Formula $A\left(\lambda_{1}v_{1}+\lambda_{2}v_{2}\right)=\lambda_{1}w_{1}+\lambda_{2}w_{2}\in W$
\end_inset

 we get 
\begin_inset Formula 
\[
\lambda_{1}w_{1}+\lambda_{2}w_{2}\in im(A)
\]

\end_inset


\end_layout

\end_deeper
\begin_layout Enumerate
\begin_inset Formula $im(A^{T})=\left\{ x\in V:x=A^{T}w,w\in W\right\} ,im(A^{T})\subseteq\mathbb{R}^{n}$
\end_inset

.
 Let's show that 
\begin_inset Formula $im(A^{T})$
\end_inset

 is a subspace of 
\begin_inset Formula $\mathbb{R}^{n}$
\end_inset

:
\end_layout

\begin_deeper
\begin_layout Enumerate
\begin_inset Formula $A^{T}\vec{0}=\vec{0}\Rightarrow im(A^{T})\neq\emptyset$
\end_inset


\end_layout

\begin_layout Enumerate
Let 
\begin_inset Formula $v_{1},v_{2}\in im(A^{T}),\lambda_{1},\lambda_{2}\in\mathbb{R}$
\end_inset

 
\begin_inset Newline newline
\end_inset


\begin_inset Formula $\exists w_{1},w_{2}\in W\,\,s.t\,\,Aw_{1}=v_{1},Aw_{2}=v_{2}$
\end_inset

 
\begin_inset Formula 
\[
\lambda_{1}w_{1}+\lambda_{2}w_{2}=\lambda_{1}Av_{1}+\lambda_{2}Av_{2}=A(\lambda_{1}v_{1}+\lambda_{2}v_{2})
\]

\end_inset

and since 
\begin_inset Formula $\lambda_{1}v_{1}+\lambda_{2}v_{2}\in V$
\end_inset

 and 
\begin_inset Formula $A\left(\lambda_{1}v_{1}+\lambda_{2}v_{2}\right)=\lambda_{1}w_{1}+\lambda_{2}w_{2}\in W$
\end_inset

 we get 
\begin_inset Formula 
\[
\lambda_{1}w_{1}+\lambda_{2}w_{2}\in im(A)
\]

\end_inset


\end_layout

\end_deeper
\begin_layout Enumerate
\begin_inset Formula $ker\left(A\right)=\left\{ x\in V:Ax=0\right\} \subseteq\mathbb{R}^{n},$
\end_inset

 again, let's show that 
\begin_inset Formula $ker(A)$
\end_inset

 is a subspace of 
\begin_inset Formula $\mathbb{R}^{n}$
\end_inset

.
\end_layout

\begin_deeper
\begin_layout Enumerate
\begin_inset Formula $A\vec{0}=\vec{0}\Rightarrow ker\left(A\right)\neq\emptyset$
\end_inset


\end_layout

\begin_layout Enumerate
Let 
\begin_inset Formula $v_{1},v_{2}\in ker\left(A\right),\lambda_{1},\lambda_{2}\in\mathbb{R}\Rightarrow A\left(\lambda_{1}v_{1}+\lambda_{2}v_{2}\right)=\lambda_{1}Av_{1}+\lambda_{2}Av_{2}=0\Rightarrow\lambda_{1}v_{1}+\lambda_{2}v_{2}\in ker(A)$
\end_inset


\end_layout

\end_deeper
\end_deeper
\begin_layout Enumerate
\begin_inset ERT
status open

\begin_layout Plain Layout

{}
\end_layout

\end_inset

Let T be a linear transformation 
\begin_inset Formula $T:V\rightarrow W$
\end_inset

 , since we are concentrating on 
\begin_inset Formula $V\subseteq\mathbb{R}^{n},\,W\subseteq\mathbb{R}^{m}$
\end_inset

 we can represent T as 
\begin_inset Formula $T(x)=Ax$
\end_inset

.
\end_layout

\begin_deeper
\begin_layout Enumerate
An affine transformation is of the form :
\begin_inset Formula $S(x)=Bx+c$
\end_inset

 and therefore every linear transformation is an affine transformation with
 
\begin_inset Formula $c=0.$
\end_inset


\end_layout

\begin_layout Enumerate
An affine transformation with 
\begin_inset Formula $c\neq0$
\end_inset

 cannot be represented as a linear transformation.
\end_layout

\end_deeper
\begin_layout Enumerate
\begin_inset ERT
status open

\begin_layout Plain Layout

{}
\end_layout

\end_inset


\end_layout

\begin_deeper
\begin_layout Enumerate
The projection of vector v onto vector u:
\begin_inset Formula $P_{v,u}=\frac{\left\langle v,u\right\rangle }{\bigparallel u\bigparallel^{2}}\cdot u=\frac{-2+3+8}{\sqrt{1+1+4}}=-\frac{9}{\sqrt{6}}$
\end_inset


\end_layout

\end_deeper
\begin_layout Enumerate
\begin_inset ERT
status open

\begin_layout Plain Layout

{}
\end_layout

\end_inset


\end_layout

\begin_layout Enumerate
Let 
\begin_inset Formula $v,w\in\mathbb{R}^{m},v,w\neq0$
\end_inset

.
 Let 
\begin_inset Formula $\theta$
\end_inset

 be the angle between 
\begin_inset Formula $v$
\end_inset

 and w.
\begin_inset Formula 
\[
0=cos\theta\Leftrightarrow\frac{\left\langle u,v\right\rangle }{\left\Vert u\right\Vert \cdot\left\Vert v\right\Vert }=0\Leftrightarrow\left\langle u,v\right\rangle =0
\]

\end_inset


\end_layout

\begin_layout Enumerate
Let U be an orthogonal matrix and let A be an invertible matrix.
\begin_inset Formula $U,A\in\mathbb{R}^{nxn}$
\end_inset

 
\begin_inset Formula 
\[
E_{A}=\left\{ y|y=Ax+v,\left\Vert x\right\Vert =1,x\in\mathbb{R}^{n}\right\} ,E_{AU}=\left\{ y|y=AUx+v,\left\Vert x\right\Vert =1,x\in\mathbb{R}^{n}\right\} 
\]

\end_inset


\begin_inset Formula $\underline{E_{AU}\subseteq E_{A}:}$
\end_inset


\begin_inset Newline newline
\end_inset


\begin_inset Formula $Let$
\end_inset

 
\begin_inset Formula $y\in E_{AU},\,y=AUx+v,\left\Vert x\right\Vert =1\Rightarrow\left\langle x,x\right\rangle \Rightarrow\left\langle U^{T}Ux,x\right\rangle \Rightarrow\left\langle Ux,Ux\right\rangle \Rightarrow\left\Vert Ux\right\Vert =1$
\end_inset


\begin_inset Newline newline
\end_inset

Now the affine transformation defining 
\begin_inset Formula $E_{A}$
\end_inset

on the vector
\begin_inset Formula $Ux$
\end_inset

 gives
\begin_inset Formula $AUx+v=y\Rightarrow y\in E_{A}$
\end_inset


\begin_inset Newline newline
\end_inset


\begin_inset Formula $\underline{E_{A}\subseteq E_{AU}:}$
\end_inset


\begin_inset Newline newline
\end_inset

 Let 
\begin_inset Formula $y\in E_{A}$
\end_inset

 
\begin_inset Formula $y=Ax+v,\left\Vert x\right\Vert =1,$
\end_inset

the equation 
\begin_inset Formula $Uz=x$
\end_inset

 has a unique solution since U is invertible, therefore:
\begin_inset Formula 
\[
y=AUz+v,\left\Vert x\right\Vert =\left\Vert Uz\right\Vert =\left\Vert z\right\Vert =1=\Rightarrow y\in E_{AU}
\]

\end_inset


\end_layout

\begin_layout Enumerate
Denote 
\begin_inset Formula $L_{w,b}=\left\{ x|w^{T}x=b\right\} $
\end_inset

.
 
\begin_inset Newline newline
\end_inset

The projection of vector x in the hyperplane onto the vector w is:
\begin_inset Formula 
\[
P_{x,w}=\frac{x^{T}w}{\left\Vert w\right\Vert ^{2}}w=\frac{b}{\left\Vert w\right\Vert ^{2}}w
\]

\end_inset

and the distance between the origin and the hyperplane is the norm of this
 projection : 
\begin_inset Formula 
\[
Distance=\left\Vert P_{x,w}\right\Vert =\frac{b}{\left\Vert w\right\Vert ^{2}}\left\Vert w\right\Vert =\frac{b}{\left\Vert w\right\Vert }
\]

\end_inset


\end_layout

\begin_layout Enumerate
\begin_inset ERT
status open

\begin_layout Plain Layout

{}
\end_layout

\end_inset


\end_layout

\begin_layout Enumerate
Denote 
\begin_inset Formula $A=\left[\begin{matrix}5 & 5\\
-1 & 7
\end{matrix}\right]$
\end_inset

 and let 
\begin_inset Formula $A=U\Sigma V^{T}$
\end_inset

 be the SVD of A, denote the columns of U and V as 
\begin_inset Formula $u_{i}$
\end_inset

 and 
\begin_inset Formula $v_{i}$
\end_inset

 respectivly.
\begin_inset Formula 
\[
AA^{T}=U\Sigma V^{T}V\Sigma U^{T}=U\Sigma^{2}U^{T}
\]

\end_inset


\begin_inset Formula 
\[
AA^{T}=\left[\begin{matrix}5 & 5\\
-1 & 7
\end{matrix}\right]\cdot\left[\begin{matrix}5 & -1\\
5 & 7
\end{matrix}\right]=\left[\begin{matrix}50 & 30\\
30 & 50
\end{matrix}\right]
\]

\end_inset


\begin_inset Newline newline
\end_inset

Let's find 
\begin_inset Formula $AA^{T}$
\end_inset

 eigenvalues by solving 
\begin_inset Formula 
\[
det\left(AA^{T}-\lambda I\right)=0
\]

\end_inset


\begin_inset Formula $det\left(\left[\begin{matrix}50-\lambda & 30\\
30 & 50-\lambda
\end{matrix}\right]\right)=\left(50-\lambda\right)^{2}-30^{2}=0\Rightarrow50^{2}-2\cdot50\lambda+\lambda^{2}-30^{2}\Rightarrow\lambda^{2}-100\lambda+1600$
\end_inset


\begin_inset Formula 
\[
\lambda_{1}=80\,,\,\lambda_{2}=20\Rightarrow\sigma_{1}=\sqrt{80},\sigma_{2}=\sqrt{20}
\]

\end_inset


\begin_inset Formula 
\[
\left[\begin{matrix}50-80 & 30\\
30 & 50-80
\end{matrix}\right]\left[\begin{matrix}u_{11}\\
u_{12}
\end{matrix}\right]=\left[\begin{matrix}0\\
0
\end{matrix}\right]\Rightarrow-30u_{11}+30u_{22}=0\Rightarrow u_{11}=u_{22},u_{1}=\frac{1}{\sqrt{2}}\left[\begin{matrix}1\\
1
\end{matrix}\right]
\]

\end_inset


\begin_inset Formula 
\[
\left[\begin{matrix}50-20 & 30\\
30 & 50-20
\end{matrix}\right]\left[\begin{matrix}u_{21}\\
u_{22}
\end{matrix}\right]=\left[\begin{matrix}0\\
0
\end{matrix}\right]\Rightarrow30u_{11}+30u_{22}=0\Rightarrow u_{11}=-u_{22},u_{1}=\frac{1}{\sqrt{2}}\left[\begin{matrix}1\\
-1
\end{matrix}\right]
\]

\end_inset


\begin_inset Formula 
\[
U=\frac{1}{\sqrt{2}}\left[\begin{matrix}1 & 1\\
1 & -1
\end{matrix}\right]
\]

\end_inset


\begin_inset Formula 
\[
A=U\Sigma V^{T}\Rightarrow U^{T}A=\Sigma V^{T}
\]

\end_inset

therefore the i'th row of 
\begin_inset Formula $\Sigma V^{T}$
\end_inset

 is 
\begin_inset Formula $\sigma_{i}v_{i}$
\end_inset

 and is equal the the i'th row of 
\begin_inset Formula $U^{T}A$
\end_inset

 and so 
\begin_inset Formula 
\[
U^{T}A=\frac{1}{\sqrt{2}}\left[\begin{matrix}1 & 1\\
1 & -1
\end{matrix}\right]\cdot\left[\begin{matrix}5 & 5\\
-1 & 7
\end{matrix}\right]=\frac{1}{\sqrt{2}}\left[\begin{matrix}4 & 12\\
6 & -2
\end{matrix}\right]
\]

\end_inset


\begin_inset Formula 
\[
\sigma_{1}v_{1}=\frac{1}{\sqrt{2}}\left[\begin{matrix}4\\
12
\end{matrix}\right]\Rightarrow v_{1}=\frac{4}{\sqrt{160}}\left[\begin{matrix}1\\
3
\end{matrix}\right]\Rightarrow v_{1}=\frac{1}{\sqrt{10}}\left[\begin{matrix}1\\
3
\end{matrix}\right]
\]

\end_inset


\begin_inset Formula 
\[
\sigma_{2}v_{2}=\frac{1}{\sqrt{2}}\left[\begin{matrix}6\\
-2
\end{matrix}\right]\Rightarrow v_{2}=\frac{2}{\sqrt{40}}\left[\begin{matrix}3\\
-1
\end{matrix}\right]\Rightarrow v_{2}=\frac{1}{\sqrt{10}}\left[\begin{matrix}3\\
-1
\end{matrix}\right]
\]

\end_inset


\begin_inset Formula 
\[
A=U\Sigma V^{T},U=\frac{1}{\sqrt{2}}\left[\begin{matrix}1 & 1\\
1 & -1
\end{matrix}\right],\Sigma=\left[\begin{matrix}\sqrt{80} & 0\\
0 & \sqrt{20}
\end{matrix}\right],V=\frac{1}{\sqrt{10}}\left[\begin{matrix}1 & 3\\
3 & -1
\end{matrix}\right]
\]

\end_inset


