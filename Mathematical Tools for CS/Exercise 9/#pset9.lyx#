\begin_body

\begin_layout Enumerate
\begin_inset Formula $x,y\in\Delta_{n},\,\delta(x,y)=\frac{1}{2}\left\Vert x-y\right\Vert _{1}$
\end_inset


\begin_inset Newline newline
\end_inset


\begin_inset Formula $\forall z\in\mathbb{R}^{n}$
\end_inset

, 
\begin_inset Formula $\left\Vert z\right\Vert _{1}=\sum_{i=1}^{n}\left|z_{i}\right|=\sum_{i=1}^{n}\left|z_{i}\right|\cdot1=\left|z\right|^{T}\vec{1}\underset{C.S}{\leq}\left(\sum_{i=1}^{n}\left|z_{i}\right|^{2}\right)^{1/2}\left(\sum_{i=1}^{n}1^{2}\right)^{1/2}=\sqrt{n}\left\Vert z\right\Vert _{2}$
\end_inset


\begin_inset Newline newline
\end_inset

Therefore
\begin_inset Formula 
\[
\left\Vert x-y\right\Vert _{1}\leq\sqrt{n}\left\Vert z\right\Vert _{2}\Rightarrow\frac{1}{2}\left\Vert x-y\right\Vert _{1}\leq\frac{1}{2}\sqrt{n}\left\Vert x-y\right\Vert _{2}
\]

\end_inset


\end_layout

\begin_layout Enumerate
Let G be a connected, non-bipartite d-regular graph on n vertices.
 Let 
\begin_inset Formula $A=\frac{1}{d}A_{G}$
\end_inset

 be it's normalized adjacency matrix.
\end_layout

\begin_deeper
\begin_layout Enumerate
Let 
\begin_inset Formula $1=\lambda_{1}\geq\lambda_{2}\geq...\geq\lambda_{n}$
\end_inset

 be A's eigenvalues.
 Let
\begin_inset Formula $\lambda_{*}=max_{i>1}\left|\lambda_{i}\right|$
\end_inset


\begin_inset Newline newline
\end_inset

In pset8 question 1 we have shown that if G is a d-regular graph on n vertices
 then 
\begin_inset Formula $\lambda_{1}=d$
\end_inset

, and that 
\begin_inset Formula $2\leq i\leq n,\,\,\left|\lambda_{i}\right|\leq d$
\end_inset

.
 Additionally we have shown that the multiplicity of the eigenvalue d is
 equal to the number of connected components in G, therefore, since G is
 connected we know that 
\begin_inset Formula 
\[
\forall i\in[n]\backslash\{1\},\,=\lambda_{1}=1>\left|\lambda_{i}\right|
\]

\end_inset


\end_layout

\begin_layout Enumerate
Let 
\begin_inset Formula $u_{1}\in\mathbb{R}^{n},\,\,u_{1}=\frac{1}{\sqrt{n}}\left[\begin{matrix}1\\
1\\
\vdots\\
1
\end{matrix}\right].\,$
\end_inset


\begin_inset Newline newline
\end_inset


\begin_inset Formula 
\[
\left[A\frac{1}{\sqrt{n}}\left[\begin{matrix}1\\
1\\
\vdots\\
1
\end{matrix}\right]\right]_{i}=\left[\frac{1}{d}A_{G}\frac{1}{\sqrt{n}}\left[\begin{matrix}1\\
1\\
\vdots\\
1
\end{matrix}\right]\right]_{i}=\frac{1}{d\sqrt{n}}\sum_{j=1}^{n}a_{ij}=\frac{1}{d\sqrt{n}}d=\frac{1}{\sqrt{n}}
\]

\end_inset


\begin_inset Formula 
\[
\Downarrow
\]

\end_inset


\begin_inset Formula 
\[
Au_{1}=\frac{1}{\sqrt{n}}\left[\begin{matrix}1\\
1\\
\vdots\\
1
\end{matrix}\right]=u_{1},\,\,\,\,\left\Vert u_{1}\right\Vert _{2}=\sqrt{\sum_{i=1}^{n}(u_{1i})^{2}}=\sqrt{\sum_{i=1}^{n}\frac{1}{n}}=1
\]

\end_inset


\end_layout

\begin_layout Enumerate
Let 
\begin_inset Formula $u_{1},...u_{n}$
\end_inset

 be orthonormal eigenvectors of A corrosponding to 
\begin_inset Formula $\lambda_{1},...\lambda_{n}$
\end_inset

.
 Let 
\begin_inset Formula $t\in\mathbb{N},x\in\Delta_{n}$
\end_inset


\begin_inset Newline newline
\end_inset


\begin_inset Formula $A=\frac{1}{d}A_{G}$
\end_inset

 is the adjacency matrix of G therefore it is a real symmetric matrix and
 we can apply the spectral decomposition to it.
\begin_inset Formula 
\[
A=U\Lambda U^{T}
\]

\end_inset

Where U is the orthogonal matrix whose colomns are the eigenvectors of A
 and 
\begin_inset Formula $\Lambda$
\end_inset

 is the diagonal 
\begin_inset Formula $(\lambda_{1},\dots\lambda_{n}).$
\end_inset


\begin_inset Newline newline
\end_inset


\begin_inset Formula 
\[
xA^{t}-\frac{1}{n}\left[\begin{matrix}1 & \dots & 1\end{matrix}\right]=(\left\langle x,u_{1}\right\rangle u_{1},\dots,\left\langle x,u_{n}\right\rangle u_{n})U\Lambda^{t}U^{T}-\frac{1}{n}\left[\begin{matrix}1 & \dots & 1\end{matrix}\right]=
\]

\end_inset


\begin_inset Newline newline
\end_inset


\begin_inset Formula 
\[
\left[\begin{matrix}\left\langle x,u_{1}\right\rangle  & \dots & \left\langle x,u_{n}\right\rangle \end{matrix}\right]\Lambda^{t}U^{T}-\frac{1}{n}\left[\begin{matrix}1 & \dots & 1\end{matrix}\right]=\left[\begin{matrix}\left\langle x,u_{1}\right\rangle \lambda_{1}^{t} & \dots & \left\langle x,u_{n}\right\rangle \lambda_{n}^{t}\end{matrix}\right]U^{T}-\frac{1}{n}\left[\begin{matrix}1 & \dots & 1\end{matrix}\right]=
\]

\end_inset


\begin_inset Formula 
\[
\sum_{i=1}^{n}\left\langle x,u_{i}\right\rangle \lambda_{i}^{t}u_{i}-\frac{1}{n}\left[\begin{matrix}1 & \dots & 1\end{matrix}\right]=\left\langle x,u_{1}\right\rangle \lambda_{1}^{t}u_{1}+\sum_{i=2}^{n}\left\langle x,u_{i}\right\rangle \lambda_{i}^{t}u_{i}-\frac{1}{n}\left[\begin{matrix}1 & \dots & 1\end{matrix}\right]=
\]

\end_inset

Since 
\begin_inset Formula $\lambda_{1}=1,\,\,\,u_{1}=\frac{1}{\sqrt{n}}\left[\begin{matrix}1\\
\vdots\\
1
\end{matrix}\right]$
\end_inset

 we get:
\begin_inset Formula 
\[
=\frac{1}{n}\left[\sum_{i=1}^{n}x_{i}\right]\left[\begin{matrix}1 & \dots & 1\end{matrix}\right]-\frac{1}{n}\left[\begin{matrix}1 & \dots & 1\end{matrix}\right]+\sum_{i=2}^{n}\left\langle x,u_{i}\right\rangle \lambda_{i}^{t}u_{i}=
\]

\end_inset


\begin_inset Formula 
\[
=\frac{1}{n}\left[\begin{matrix}1 & \dots & 1\end{matrix}\right]-\frac{1}{n}\left[\begin{matrix}1 & \dots & 1\end{matrix}\right]+\sum_{i=2}^{n}\left\langle x,u_{i}\right\rangle \lambda_{i}^{t}u_{i}=\sum_{i=2}^{n}\left\langle x,u_{i}\right\rangle \lambda_{i}^{t}u_{i}
\]

\end_inset


\end_layout

\begin_layout Enumerate
\begin_inset Formula $\delta(xA^{t},\pi)=\frac{1}{2}\left\Vert xA^{t}-\pi\right\Vert _{1}\underset{q1}{\leq}\frac{1}{2}\sqrt{n}\left\Vert xA^{t}-\pi\right\Vert _{2}\underset{q2.c}{=}\frac{1}{2}\sqrt{n}\left\Vert \sum_{i=2}^{n}\left\langle x,u_{i}\right\rangle \lambda_{i}^{t}u_{i}\right\Vert _{2}=\frac{1}{2}\sqrt{n}\sqrt{\sum_{i=2}^{n}\left(\left\langle x,u_{i}\right\rangle \lambda_{i}^{t}\right)^{2}}=\frac{1}{2}\sqrt{n}\sqrt{\sum_{i=2}^{n}\left(\left\langle x,u_{i}\right\rangle \right)^{2}\left(\lambda_{i}^{2}\right)^{t}}\leq\frac{1}{2}\sqrt{n}\sqrt{\sum_{i=2}^{n}\left(\left\langle x,u_{i}\right\rangle \right)^{2}\left(\lambda_{*}^{t}\right)^{2}}$
\end_inset


\begin_inset Formula 
\[
=\frac{1}{2}\sqrt{n}\sqrt{\left(\lambda_{*}^{t}\right)^{2}\sum_{i=2}^{n}\left(\left\langle x,u_{i}\right\rangle \right)^{2}}=\frac{1}{2}\sqrt{n}\lambda_{*}^{t}\sqrt{\sum_{i=2}^{n}\left(\left\langle x,u_{i}\right\rangle \right)^{2}}=\frac{1}{2}\sqrt{n}\lambda_{*}^{t}\left\Vert x\right\Vert _{2}=\frac{1}{2}\sqrt{n}\lambda_{*}^{t}
\]

\end_inset


\end_layout

\begin_layout Enumerate
\begin_inset Formula $t_{mix}=min\left\{ t\mathbb{\in N}:\forall x\in\Delta_{n},\delta(xA^{t},\pi)\leq\frac{1}{4}\right\} $
\end_inset


\begin_inset Newline newline
\end_inset

from section (d) we know that:
\begin_inset Formula 
\[
\delta(xA^{t},\pi)\leq\frac{1}{2}\sqrt{n}\lambda_{*}^{t}=\frac{\sqrt{n}}{2}(1-\gamma)^{t}\leq\frac{\sqrt{n}}{2}e^{-\gamma t}
\]

\end_inset

Therefore if we find the minimal 
\begin_inset Formula $t_{*}$
\end_inset

 for which 
\begin_inset Formula $\frac{1}{2}\sqrt{n}\lambda_{*}^{t}\leq\frac{1}{4}$
\end_inset

 then we will have found an upper bound for 
\begin_inset Formula $t_{mix}$
\end_inset

.
 Let us find 
\begin_inset Formula $t_{*}$
\end_inset

 for which the equality holds and since 
\begin_inset Formula $\lambda_{*}<1$
\end_inset

 for any 
\begin_inset Formula $t>t_{*}$
\end_inset

 we will know that 
\begin_inset Formula $\frac{1}{2}\sqrt{n}\lambda_{*}^{t}<\frac{1}{2}\sqrt{n}\lambda_{*}^{t_{*}}$
\end_inset

 
\begin_inset Formula 
\[
\frac{1}{2}\sqrt{n}\lambda_{*}^{t}=\frac{1}{4}\Leftrightarrow\lambda_{*}^{t}=\frac{1}{2\sqrt{n}}\Leftrightarrow log_{\lambda_{*}}(\lambda_{*}^{t})=log_{\lambda_{*}}(\frac{1}{2\sqrt{n}})\Leftrightarrow t=log_{\lambda_{*}}(\frac{1}{2\sqrt{n}})\Leftrightarrow t=\frac{log(\frac{1}{2\sqrt{n}})}{log(\lambda_{*})}=\frac{log(\frac{1}{2})+log(n^{-\frac{1}{2}})}{log(\lambda_{*})}=
\]

\end_inset


\begin_inset Formula 
\[
\frac{log(\frac{1}{2})-\frac{1}{2}log(n)}{log(\lambda_{*})}=\frac{log(\frac{1}{2})-\frac{1}{2}log(n)}{-log(\frac{1}{\lambda_{*}})}=\frac{-log(\frac{1}{2})+\frac{1}{2}log(n)}{log(\frac{1}{\lambda_{*}})}=O\left(\frac{log(n)}{log\left(\frac{1}{\lambda_{*}}\right)}\right)
\]

\end_inset

Again, if we find the minimal 
\begin_inset Formula $t_{*}$
\end_inset

 for which 
\begin_inset Formula $\frac{\sqrt{n}}{2}e^{-\gamma t}\leq\frac{1}{4}$
\end_inset

 then we will have found an upper bound for 
\begin_inset Formula $t_{mix}$
\end_inset

 and again, if we find the 
\begin_inset Formula $t_{*}$
\end_inset

which holds the equality then for any 
\begin_inset Formula $t>t_{*}$
\end_inset

 we will know that 
\begin_inset Formula $\frac{\sqrt{n}}{2}e^{-\gamma t}<\frac{\sqrt{n}}{2}e^{-\gamma t_{*}}$
\end_inset


\begin_inset Newline newline
\end_inset


\begin_inset Formula 
\[
\frac{\sqrt{n}}{2}\left(e^{-\gamma}\right)^{t}=\frac{1}{4}\Leftrightarrow e^{-\gamma t}=\frac{1}{2\sqrt{n}}\Leftrightarrow-\gamma t=log\left(\frac{1}{2\sqrt{n}}\right)=\frac{log\left(\frac{1}{2\sqrt{n}}\right)}{-\gamma}=\frac{log(\frac{1}{2})+log(n^{-\frac{1}{2}})}{-\gamma}=\frac{log(\frac{1}{2})-\frac{1}{2}log(n)}{-\gamma}=\frac{-log(\frac{1}{2})+\frac{1}{2}log(n)}{\gamma}=O\left(\frac{log(n)}{\gamma}\right)
\]

\end_inset


\end_layout

\end_deeper
\begin_layout Enumerate
\begin_inset Formula $A=\left[\begin{matrix}0 & \frac{1}{2} & 0 & \dots & 0 & \frac{1}{2}\\
\frac{1}{2} & 0 & \frac{1}{2} & 0 & \dots & 0\\
0 & \frac{1}{2} & 0 & \frac{1}{2} & 0 & \dots\\
\dots & \dots & \dots & \dots & \dots & \dots\\
0 & \dots & 0 & \frac{1}{2} & 0 & \frac{1}{2}\\
\frac{1}{2} & 0 & \dots & 0 & \frac{1}{2} & 0
\end{matrix}\right]$
\end_inset

 
\end_layout

\begin_deeper
\begin_layout Enumerate
Let us show that 
\begin_inset Formula $\lambda_{i}=cos\left(\frac{2\pi}{n}i\right)\,\,i=0,...,n-1$
\end_inset

 are eigenvalues of A by showing that the following vectors are the corrospondin
g eigenvectors :
\begin_inset Newline newline
\end_inset


\begin_inset Formula 
\[
v_{i}=\left[\begin{matrix}cos\left(\frac{2\pi}{n}i\right) & cos\left(\frac{2\pi}{n}2i\right) & ,\dots, & cos\left(\frac{2\pi}{n}in\right)\end{matrix}\right]
\]

\end_inset


\begin_inset Formula 
\[
\left[Av_{i}\right]_{j}=\frac{1}{2}cos\left(\frac{2\pi}{n}(j-1)i\right)+\frac{1}{2}cos\left(\frac{2\pi}{n}(j+1)i\right)=\frac{1}{2}\left[cos\left(\frac{2\pi}{n}ji\right)cos\left(\frac{2\pi}{n}i\right)+sin\left(\frac{2\pi}{n}ji\right)sin\left(\frac{2\pi}{n}i\right)+cos\left(\frac{2\pi}{n}ji\right)cos\left(\frac{2\pi}{n}i\right)-sin\left(\frac{2\pi}{n}ji\right)sin\left(\frac{2\pi}{n}i\right)\right]=
\]

\end_inset


\begin_inset Formula 
\[
=\frac{1}{2}\left[2cos\left(\frac{2\pi}{n}ji\right)cos\left(\frac{2\pi}{n}i\right)\right]=cos\left(\frac{2\pi}{n}ji\right)cos\left(\frac{2\pi}{n}i\right)
\]

\end_inset


\begin_inset Formula 
\[
\left[\lambda_{i}v_{i}\right]_{j}=cos\left(\frac{2\pi}{n}i\right)\cdot cos\left(\frac{2\pi}{n}ji\right)
\]

\end_inset


\begin_inset Newline newline
\end_inset

And so 
\begin_inset Formula $\left[Av_{i}\right]_{j}=\left[\lambda_{i}v_{i}\right]_{j}$
\end_inset

 therefore 
\begin_inset Formula $Av_{i}=\lambda_{i}v_{i}$
\end_inset


\end_layout

\begin_layout Enumerate
Since 
\begin_inset Formula $1\leq i\leq n-1,\left|cos\left(\frac{2\pi}{n}i\right)\right|\leq\left|cos\left(\frac{2\pi}{n}\right)\right|\Rightarrow\lambda_{*}=cos\left(\frac{2\pi}{n}\right)$
\end_inset


\begin_inset Newline newline
\end_inset


\begin_inset Formula 
\[
t_{mix}=O\left(\frac{logn}{\gamma}\right)=O\left(\frac{logn}{\gamma}\right)=O\left(\frac{logn}{1-\lambda_{*}}\right)=O\left(\frac{logn}{1-cos\left(\frac{2\pi}{n}\right)}\right)=
\]

\end_inset


\begin_inset Formula 
\[
O\left(\frac{logn}{1-\left[cos^{2}\left(\frac{\pi}{n}\right)-sin^{2}\left(\frac{\pi}{n}\right)\right]}\right)=O\left(\frac{logn}{cos^{2}\left(\frac{\pi}{n}\right)+sin^{2}\left(\frac{\pi}{n}\right)-\left[cos^{2}\left(\frac{\pi}{n}\right)-sin^{2}\left(\frac{\pi}{n}\right)\right]}\right)=
\]

\end_inset


\begin_inset Formula 
\[
O\left(\frac{logn}{2sin^{2}(\frac{\pi}{n})}\right)\overset{(*)}{=}O\left(\frac{logn}{2(\frac{\pi}{n}-2)^{2}}\right)=O\left(\frac{logn}{2(\frac{\pi}{n}-2)^{2}}\right)=
\]

\end_inset


\begin_inset Formula 
\[
O\left(\frac{logn}{2\left(\frac{\pi^{2}}{n^{2}}-4\frac{\pi}{n}+4\right)}\right)=O\left(\frac{n^{2}logn}{2\left(\pi^{2}-4\pi n+4n^{2}\right)}\right)=O(n^{2}logn)
\]

\end_inset


\begin_inset Newline newline
\end_inset


\begin_inset Formula 
\[
(*)\frac{\pi}{n}-2\leq sin(\frac{\pi}{n})
\]

\end_inset


\end_layout

\end_deeper
\begin_layout Enumerate
Let G be a d-regular graph and let 
\begin_inset Formula $A_{G}$
\end_inset

 be it's adjacency matrix.
 Let A,B be the maximal cut of G such that 
\begin_inset Formula $A\bigcup B=V(G)$
\end_inset

 and let C be it's size.
\begin_inset Newline newline
\end_inset

Consider the probability space 
\begin_inset Formula $\Omega=$
\end_inset

{All possible cuts of the graph G}
\begin_inset Newline newline
\end_inset

Define the R.V X=Number of edges in the cut 
\begin_inset Formula $\omega\in\Omega$
\end_inset


\begin_inset Newline newline
\end_inset

Define the i.r.v 
\begin_inset Formula $X_{ij}=\begin{cases}
1 & \text{The existing edge \ensuremath{ij\in E(G)} is in the cut }ij\in E(A,B)\\
0 & otherwise
\end{cases}$
\end_inset


\begin_inset Newline newline
\end_inset


\begin_inset Formula $E(X)=E\left(\underset{i,j\in\mathbb{N},i<j}{\sum}X_{ij}\right)=\underset{i,j\in\mathbb{N},i<j}{\sum}E\left(X_{ij}\right)=\underset{i,j\in\mathbb{N},i<j}{\sum}\frac{1}{2}\overset{*}{=}\frac{1}{4}dn$
\end_inset


\begin_inset Newline newline
\end_inset

(*) The number of edges in a d-regular graph is 
\begin_inset Formula $\frac{1}{2}d\cdot n$
\end_inset


\begin_inset Newline newline
\end_inset

C = max
\begin_inset Formula $\{X(\omega):\omega\in\Omega\},E(X)$
\end_inset


\end_layout

